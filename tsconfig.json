{
  "compilerOptions": { 
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react-native",
      "lib": ["esnext"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "module": "esnext",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "incremental": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,    
      "isolatedModules": true,     
      "esModuleInterop": true,      
      "rootDir": "./src",
      "removeComments": true,          
      "emitDecoratorMetadata": true,     
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
          "src/*": ["*"]          
      }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
